<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="marker"
            type="in.getpowerplay.assignment.source.model.Marker" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_selectable_item"
        android:orientation="vertical"
        android:padding="@dimen/padding_global"
        tools:layout_margin="@dimen/margin_global">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/markerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{marker.title}"
            android:textSize="16sp"
            tools:text="Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/markerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{marker.description}"
            android:textSize="14sp"
            tools:text="Description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/markerTimeCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{marker.timeCreated}"
            android:textSize="14sp"
            tools:text="Time Created" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>